{
  "name": "riimu/kit-classloader",
  "type": "library",
  "description": "PSR-0 and PSR-4 compatible class autoloader",
  "homepage": "http://kit.riimu.net",
  "keywords": [
    "class",
    "loader",
    "autoloader",
    "psr"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Riikka KalliomÃ¤ki",
      "email": "riikka.kalliomaki@gmail.com",
      "homepage": "http://riimu.net"
    }
  ],
  "require": {
    "php": ">=5.6.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7 || ^6.2",
    "squizlabs/php_codesniffer": "^3.0",
    "friendsofphp/php-cs-fixer": "^2.3"
  },
  "autoload": {
    "psr-4": {
      "Riimu\\Kit\\ClassLoader\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Riimu\\Kit\\ClassLoader\\": "tests/tests/",
      "Riimu\\Kit\\ClassLoader\\Test\\": "tests/constraints/"
    }
  }
}
